<% include ./partials/header %>
<div class='ui main text container'>
    <div class='ui huge centered header'><%=blog.title%></div>
    <div class='ui top attached segment'>
        <div class='item'>
            <img class='ui centered image' src='<%=blog.image %>' >
            <div class='content' >
                <span><em>Created date: <%= blog.createdDate.toDateString()%></em></span>
             </div>
        </div>
        <div class='description'>
            <p><h3><%- blog.body%></h3></p>
        </div>
        <div class='ui animated blue button'>
            <a  href='/blogs/<%=blog._id%>/edit'>
                <div class='visible content'>Edit</div>
                <div class='hidden content'>
                    <i class='icon pencil'></i>
                </div>
            </a>
        </div>
        <form id ='inline' action='/blogs/<%= blog._id %>?_method=DELETE' method='POST'>
                    <button class='ui red button'>Delete</button>
         </form>
    </div>
</div>

<% include ./partials/footer %>